{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "./out-tsc/",
    "outDir": "./out-tsc/es5",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "files": [
    "./out-tsc/index.ts"
  ],
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "flatModuleOutFile": "ng2-expression-builder.js",
    "flatModuleId": "ng2-expression-builder",
    "fullTemplateTypeCheck": true
  }
}